{% extends "base.html.twig" %}

{% block title %}
Home -
{% endblock%}

{% block body%}
	<div class="container my-4">
		<h1>Add Event</h1>

		{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

		<div class="form-group mb-3">
			{{ form_label(form.nom_event, 'Nom Événement', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.nom_event, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.nom_event) }}
			{% for message in app.flashes('errorNameExist') %}
				<div class="text-danger">{{ message }}</div>
			{% endfor %}
		</div>

		<div class="form-group mb-3">
			{{ form_label(form.date_event, 'Date Début', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.date_event, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.date_event) }}
			{% for message in app.flashes('errorDate') %}
				<div class="text-danger">{{ message }}</div>
			{% endfor %}
		</div>

		<div class="form-group mb-3">
			{{ form_label(form.nbr_members, 'Nombre Limité de Participants', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.nbr_members, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.nbr_members) }}
			{% for message in app.flashes('errorNbrLimit') %}
				<div class="text-danger">{{ message }}</div>
			{% endfor %}
		</div>

		<div class="form-group mb-3">
			{{ form_label(form.genre, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.genre) }}
		</div>

		<div class="form-group mb-3">
			{{ form_label(form.description, 'Plus de Détails', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.description) }}
		</div>

		<div class="form-group mb-3">
			{{ form_label(form.sponsors, 'Sponsors', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.sponsors, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.sponsors) }}
		</div>

		<div class="form-group mb-3">
			{{ form_label(form.image_file, 'Image', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.image_file, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.image_file) }}
		</div>

		<div class="form-group text-center">
			<button type="submit" class="btn btn-primary">Enregistrer</button>
		</div>

		{{ form_end(form) }}


	</div>

{% endblock %}
