{% extends 'base.html.twig' %}

{% block body %}
	<div class="formbold-main-wrapper">
		<div class="formbold-form-wrapper">
			<div class="formbold-event-wrapper">
				<h3>{{event.getNomEvent()}}</h3>
				<rect width="490" height="215" rx="5" fill="url(#pattern0)"/>
				<defs>
					<pattern id="pattern0" patterncontentunits="objectBoundingBox" width="1" height="1">
						<use xlink:href="#image0_1675_1746" transform="translate(0 -0.524787) scale(0.000379363 0.000864594)"/>
					</pattern>
					{% if event.getImagePath() %}
						<img src="{{ asset('uploads/events_images/' ~ event.imagePath) }}" alt="Event Image" style="max-width: 100%; height: auto; border-radius: 10px;">
					{% else %}
						Aucune image
					{% endif %}
					<h4>What youâ€™ll learn</h4>
					<p>
						{{event.getDescription()}}
					</p>

					<div class="formbold-event-details">
						<h5>Event Details</h5>
						<ul>
							<li>
								<svg width="18" height="18" viewbox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
									<g clip-path="url(#clip0_1675_1725)">
