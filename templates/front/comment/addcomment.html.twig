{% extends 'base.html.twig' %}

{% block title %}Ajouter un Commentaire{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">Ajouter un Commentaire au Post: {{ post.nom }}</h1>

    <!-- Affichage des messages flash -->
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}

    <div class="form-group mb-3">
        {{ form_label(form.description, 'Votre Commentaire', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control','required': false}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Publier</button>
    </div>

    {{ form_end(form) }}

    <a href="{{ path('app_showcomments', {'id': post.id}) }}" class="btn btn-secondary mt-3">Retour</a>
</div>
{% endblock %}

