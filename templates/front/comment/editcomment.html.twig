{% extends 'base.html.twig' %}

{% block title %}Modifier le Commentaire{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Modifier le Commentaire</h1>
    <p><small class="text-muted">Posté le {{ comment.dateCreation|date('d/m/Y') }}</small></p>

    {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}

    <div class="form-group mb-3">
        {{ form_label(form.description, 'Description du Commentaire', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control','required': false}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Mettre à jour</button>
    </div>

    {{ form_end(form) }}

    <div class="mt-3 text-center">
        <a href="{{ path('app_showcomments', {'id': comment.post.id}) }}" class="btn btn-secondary">Retour aux Commentaires</a>
    </div>
</div>
{% endblock %}
