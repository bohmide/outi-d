{% extends 'base_kids.html.twig' %}

{% block title %} Quiz Result {% endblock %}

{% block body %}
    <!-- OVERLAY -->
    <div id="popup-overlay-1" class="overlay">
        <div class="popup">
            <span class="close-btn" onclick="closePopup()">‚úñ</span>

            <!-- IMAGE -->
            <div class="image-container">
                {% if isCorrect %}
                    <img src="{{ asset('img/globtrotter-happy.png') }}" alt="Correct Answer" class="result-image">
                {% else %}
                    <img src="{{ asset('img/globtrotter-happy.png') }}" alt="Incorrect Answer" class="result-image">
                {% endif %}
            </div>

            <!-- TEXTE -->
            <h1 class="result-title">
                {% if isCorrect %}
                    üéâ Bravo, GlobeTrotter Junior ! üåç
                {% else %}
                    üò¢ Oups, essaie encore ! üí™
                {% endif %}
            </h1>

            <h3 class="earned-points">
                {% if isCorrect %}
                    üèÜ Tu as gagn√© <strong>{{ points }}</strong> points !
                {% else %}
                    ‚ùå Pas de points cette fois, r√©essaie !
                {% endif %}
            </h3>

            <p class="result-message">
                {% if isCorrect %}
                    ‚ú® Continue l'exploration, aventurier ! ‚ú®
                {% else %}
                    üöÄ Tous les grands explorateurs font des erreurs, recommence !
