        </div>
    </div>

    {% if badgeMessage %}
    <div id="popup-overlay-2" class="popup-overlay-2">
        <div class="popup">
            <button class="popup-close" onclick="closePopup()">√ó</button>
            <h2>üéâ F√©licitations !</h2>
            <p>{{ badgeMessage }}</p>
            {% if badgeIcon %}
                <img src="{{ asset('uploads/badges/' ~ badgeIcon) }}" alt="{{ badgeName }}" style="width: 50px;">
            {% endif %}
        </div>
    </div>
{% endif %}



   
    <audio id="mapS" src="{{ asset('audio/feli.mp3') }}"></audio>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Play sound when the quiz card is visible
            var quizSound = document.getElementById('mapS');
           

            
                quizSound.play(); // Play sound when quiz appears
            
        });

        
    </script>
    <script>
        

        function closePopup() {
            window.location.href = "{{ path('app_map') }}";
        }

        function closePopup() {
            document.querySelector('.popup-overlay-2').style.display = 'none';
        }
        

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll(".close-popup-btn").forEach(button => {
                button.addEventListener("click", function () {
                    let popupToClose = this.closest(".popup-overlay-2"); // Trouve uniquement le pop-up f√©licitations
                    if (popupToClose) {
                        popupToClose.style.display = "none"; // Ferme uniquement ce pop-up
                    }
                });
            });
        });
        
        
        
        
        
        
    </script>

    <style>
        /* Overlay */
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 999;
        }

        /* Pop-up */
        .popup {
            background: white;
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            animation: zoomIn 0.5s ease-in-out;
            position: relative;
        }

        /* Animation d'apparition */
        @keyframes zoomIn {
            0% { transform: scale(0.8); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }

        /* Bouton de fermeture */
        .close-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            cursor: pointer;
            color: #555;
        }

        .close-btn:hover {
            color: red;
        }

        /* Image */
        .image-container {
            width: 150px;
            height: 150px;
            margin: 0 auto 20px;
            overflow: hidden;
            border-radius: 50%;
            border: 5px solid #ffcc00;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .result-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Texte */
        .result-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
        }

        .earned-points {
            font-size: 22px;
            font-weight: bold;
            color: rgb(239, 36, 36);
            margin-top: 10px;
        }

        .total-score {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
            margin-top: 20px;
        }

        .result-message {
            font-size: 18px;
            font-weight: 500;
            color: #555;
            margin-bottom: 15px;
        }

        /* Bouton */
        .btn-play {
            font-size: 22px;
            font-weight: bold;
            border-radius: 12px;
            padding: 15px 30px;
            background: #ffcc00;
            color: white;
            text-decoration: none;
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
            display: inline-block;
            margin-top: 20px;
        }

        .btn-play:hover {
            background: #ff9900;
            transform: scale(1.05);
        }
        #popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        
        .popup-box {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
            max-width: 400px;
            width: 90%;
            animation: fadeIn 0.3s ease-in-out;
        }
        
        .popup-box h2 {
            color: #28a745;
            margin-bottom: 10px;
        }
        
        .popup-box p {
            font-size: 18px;
            color: #333;
        }
        
        .popup-box button {
            background: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
        }
        
        .popup-box button:hover {
            background: #218838;
        }
        
        .close-btn {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 24px;
            cursor: pointer;
        }
        .popup-overlay-2 {
