{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter une Carte Mémoire{% endblock %}

{% block body %}
<div class="content container-fluid pt-4 px-4">
    <div class="row g-4 mb-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h4 class="mb-4">Ajouter une Carte Mémoire</h4>

                


                    {{ form_start(form) }}
                    <div class="form-group mb-3">
                        {{ form_row(form.images) }}
                        
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.game, { 'attr': {'class': 'form-control bg-dark'} }) }}
                        {{ form_label(form.game, 'Sélectionner un jeu') }}
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Ajouter les cartes</button>
                    {{ form_end(form) }}
                
                    
            </div>
        </div>
    </div>
</div>
{% endblock %}
