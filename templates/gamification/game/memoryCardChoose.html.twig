{% extends 'base_kids.html.twig' %}

{% block title %}Memory Cards{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="text-center display-3 text-primary mb-5">Choisissez le jeu de Memory</h2>
    <div class="row justify-content-center">
        {% for memoryCard in memoryCards %}
            <div class="col-md-3 mb-3">
                <a href="{{ path('memory_card_play', {'id': memoryCard.id}) }}" class="btn btn-primary w-100 py-3">
                    {{ memoryCard.game.name }}
                </a>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucun jeu de Memory disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
