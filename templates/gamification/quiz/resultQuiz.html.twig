{% extends 'base_kids.html.twig' %}

{% block title %} Quiz Result {% endblock %}

{% block body %}
    <div class="container text-center py-5">
        <div class="result-card {% if isCorrect %}correct{% else %}incorrect{% endif %}">
            <div class="image-container ">
                {% if isCorrect %}
                    <img src="{{ asset('img/spongbobhappy.gif') }}" alt="Correct Answer" class="result-image">
                {% else %}
                    <img src="{{ asset('img/spongbobsad.gif') }}" alt="Incorrect Answer" class="result-image">
                {% endif %}
            </div>
            
            <h1 class="result-title text-primary display-3">
                {% if isCorrect %}
                    ðŸŽ‰ Well Done! ðŸŽ‰
                {% else %}
                    ðŸ˜¿ Oops! Try Again! ðŸ˜¿
                {% endif %}
                <h3 class="earned-points">
                    {% if isCorrect %}
                        You earned <strong>{{ points }}</strong> points! 
                    {% else %}
                        No points this time. Try again next time! ðŸ’ª
                    {% endif %}
                    
                </h3>
            </h1>

            <p class="result-message">
                {% if isCorrect %}
                ðŸŒŸ You're amazing! Keep going! ðŸŒŸ
                    
                {% else %}
                    Don't worry! You can do it next time! ðŸ’ª
                {% endif %}
            </p>
            <h2 class="total-score">Total Score: <span>{{ totalScore }}</span></h2>

            <a href="{{ path('quiz_kids', {'level': selectedLevel, 'genre': selectedGenre}) }}" class="btn btn-lg btn-play">ðŸŽ® Try Another Quiz!</a>
        </div>
    </div>

    
    

    <audio id="correctSound" src="{{ asset('audio/spongbobhappy.mp3') }}"></audio>
    <audio id="incorrectSound" src="{{ asset('audio/spongbobsad.mp3') }}"></audio>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var correctSound = document.getElementById('correctSound');
            var incorrectSound = document.getElementById('incorrectSound');

            // Play sound based on result
            {% if isCorrect %}
                correctSound.play();
            {% else %}
                incorrectSound.play();
            {% endif %}
        });
    </script>

    <style>
        .earned-points {
            font-size: 22px; /* Smaller than the main title */
            font-weight: bold;
            color:rgb(239, 36, 36); /* Green like success */
            margin-top: 10px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            animation: fadeIn 0.8s ease-in-out;
        }
        
        .total-score {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
            margin-top: 20px;
        }
        
        .result-card {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            display: inline-block;
            text-align: center;
            width: 80%;
            max-width: 500px;
            animation: bounce 0.5s ease-in-out;
            border: 5px solid white;
            margin-top: 20px;
        }

        .result-card.correct {
            background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%);
            border: 5px solid #28a745;
        }
        

        .result-card.incorrect {
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            border: 5px solid #dc3545;
        }

        .image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 220px; /* Ajuste la taille */
            height: 220px;
            border-radius: 50%;
            overflow: hidden;
            border: 6px solid #ffcc00; /* Contour colorÃ© */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            position: relative;
            left: 50%; /* DÃ©cale vers la droite */
            transform: translateX(-50%); /* RamÃ¨ne bien au centre */
        }
        .result-image {
            width: 100%; /* Lâ€™image prend toute la place du conteneur */
            height: 100%;
            object-fit: cover; /* Remplit bien le cercle sans espace blanc */
        }
        
        
        

        .result-title {
            font-size: 28px;
            font-weight: bold;
            margin: 20px 0;
            color: #333;
        }

        .result-message {
            font-size: 18px;
            font-weight: 500;
            color: #555;
        }

        .btn-play {
            font-size: 22px;
            font-weight: bold;
            border-radius: 12px;
            padding: 15px 30px;
            background: #ffcc00;
            color: white;
            text-decoration: none;
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
            display: inline-block;
            margin-top: 20px;
        }

        .btn-play:hover {
            background: #ff9900;
            transform: scale(1.05);
        }

        @keyframes bounce {
            0% { transform: scale(0.8); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }
    </style>
{% endblock %}
