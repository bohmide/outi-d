{% extends 'base_kids.html.twig' %}

{% block title %} Choose Your Quiz! {% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="text-center">
            <h2 class="display-3 text-primary mb-5">Choose Your Quiz Level and Genre</h2>
        </div>

        <div class="selection-card border border-primary rounded p-4 mb-4">
            <form action="{{ path('quiz_kids') }}" method="GET">
                <div class="form-group">
                    <label for="level" class="font-weight-bold">Choose Level:</label>
                    <select name="level" id="level" class="form-control">
                        <option value="">Select Level</option>
                        {% for level in levels %}
                            <option value="{{ level.level }}" {% if level.level == selectedLevel %}selected{% endif %}>
                                {{level.level}}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            
                <div class="form-group mt-3">
                    <label for="genre" class="font-weight-bold">Choose Genre:</label>
                    <select name="genre" id="genre" class="form-control">
                        <option value="">Select Genre</option>
                        {% for genre in genres %}
                            <option value="{{ genre.genre }}" {% if genre.genre == selectedGenre %}selected{% endif %}>
                                {{genre.genre}}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            
                <div class="form-group mt-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>
            
            
        </div>
    </div>

    <style>
        .selection-card {
            background-color: #f9f9f9;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 15px;
        }

        select {
            padding: 10px;
            border-radius: 8px;
            border: 2px solid #ddd;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        select:focus {
            border-color: #ffcc00;
            box-shadow: 0 0 5px 3px rgba(255, 204, 0, 0.6);
        }

        label {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .btn-primary {
            font-size: 18px;
            font-weight: bold;
            background-color: #ffcc00;
            border-color: #ffcc00;
        }

        .btn-primary:hover {
            background-color: #ff9900;
            border-color: #ff9900;
        }
    </style>
{% endblock %}
