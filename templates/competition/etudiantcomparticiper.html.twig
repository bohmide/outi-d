{% extends "base.html.twig" %}

{% block title %} Compétition - Participer {% endblock %}

{% block body %}
<div class="participation-body">
    <div class="participation-container">
        <h1 class="participation-title">{{ competition.nomComp }}</h1>
        <p>{{ competition.description }}</p>
        <p><strong>Du :</strong> {{ competition.dateDebut|date('d/m/Y') }} <strong>au :</strong> {{ competition.dateFin|date('d/m/Y') }}</p>
        <p><strong>Organisée par :</strong> {{ competition.nomEntreprise }}</p>

        <h3>Soumettre votre fichier</h3>
        <form action="{{ path('competition_participation', {'id': competition.id}) }}" method="POST" enctype="multipart/form-data" class="participation-form">
            <div class="form-group">
                <label for="equipe" class="form-label">Choisissez une équipe</label>
                <select name="equipe" id="equipe" class="form-control" required>
                    <option value="" disabled selected>-- Sélectionnez une équipe --</option>
                    {% for equipe in equipes %}
                        <option value="{{ equipe.id }}">{{ equipe.nomEquipe }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="file" class="form-label">Sélectionnez un fichier (ex. .zip)</label>
                <input type="file" name="file" id="file" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success">Soumettre</button>
        </form>
    </div>
</div>
{% endblock %}
