{% extends 'base.html.twig' %}

{% block title %}Sponsors
{% endblock %}

{% block body %}
	<h1>Sponsors</h1>
	<a href="{{ path('app_add_sponsor') }}">Add New Sponsor</a>
	<table border="0">
    <thead>
        <tr>
            <th style="padding: 10px;">Name</th>
            <th style="padding: 10px;">Description</th>
            <th style="padding: 10px;">Image</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for sponsor in sponsors %}
            <tr>
                <td style="padding: 10px;"><strong>{{ sponsor.getNomSponsor() }}</strong></td>
                <td style="padding: 10px;">{{ sponsor.getDescription() }}</td>
                <td style="padding: 10px;">
                    {% if sponsor.getImagePath() %}
                        <img src="{{ asset('uploads/sponsors_images/' ~ sponsor.imagePath) }}" alt="Sponsor Image" height="50">
                    {% endif %}
                </td>
                <td style="padding: 10px;">
                    <a href="{{ path('app_update_sponsor', {'id': sponsor.getId()}) }}">Modify</a> |
                    <a href="{{ path('app_delete_sponsor', {'id': sponsor.getId()}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No sponsors found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
