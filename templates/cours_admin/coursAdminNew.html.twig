{% extends 'base_admin.html.twig' %}

{% block title %}Créer un Cours - {% endblock %}

{% block body %}
<div class="content container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded p-4">
                <h1 class="text-center mb-4 text-white">Créer un Cours</h1>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

                <div class="form-floating mb-3">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control bg-dark text-white', 'placeholder': 'Titre du cours'}}) }}
                    {{ form_label(form.nom, 'Titre du cours', {'label_attr': {'class': 'form-label text-white'}}) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control bg-dark text-white', 'placeholder': 'État du cours'}}) }}
                    {{ form_label(form.etat, 'État du cours', {'label_attr': {'class': 'form-label text-white'}}) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control bg-dark text-white', 'placeholder': 'Date de création'}}) }}
                    {{ form_label(form.dateCreation, 'Date de création', {'label_attr': {'class': 'form-label text-white'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}