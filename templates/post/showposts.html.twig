{% extends 'base.html.twig' %}

{% block title %}Posts du Forum - {{ forum.nom }}{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Posts du Forum: {{ forum.nom }}</h1>
    <p><strong>Th√®me :</strong> {{ forum.theme }}</p>
    <p><small class="text-muted">Cr√©√© le {{ forum.dateCreation|date('d/m/Y') }}</small></p>

    <!-- Affichage de l'image du forum -->
    {% if forum.imageForum %}
        <div class="my-4">
            <img src="{{ asset('uploads/forums/' ~ forum.imageForum) }}" class="img-fluid rounded" alt="Image du forum" style="max-height: 300px; object-fit: cover;">
        </div>
    {% else %}
        <div class="my-4">
            <img src="{{ asset('uploads/forums/default.png') }}" class="img-fluid rounded" alt="Image par d√©faut" style="max-height: 300px; object-fit: cover;">
        </div>
    {% endif %}

    <div class="mt-4">
        {% for post in posts %}
            <div class="card mb-3" id="post-{{ post.id }}">
                <div class="card-body position-relative">
                    <!-- Boutons Modifier et Supprimer -->
                    <div class="position-absolute top-0 end-0 m-2 d-flex gap-2">
                        <!-- Bouton Modifier -->
                        <a href="{{ path('app_editpost', {'id': post.id}) }}" class="border-0 bg-transparent text-primary"
                           style="font-size: 18px; cursor: pointer;">
                            ‚úèÔ∏è
                        </a>

                        <!-- Bouton Supprimer -->
                        <form method="POST" action="{{ path('app_deletepost', {'id': post.id}) }}">
                            <button type="submit" class="border-0 bg-transparent text-danger"
                                    style="font-size: 18px; cursor: pointer;"
                                    onclick="return confirm('Voulez-vous vraiment supprimer ce post ?');">
                                ‚ùå
                            </button>
                        </form>
                    </div>
                    <h5 class="card-title">{{ post.nom }}</h5>
                    <p class="card-text"><small class="text-muted">Post√© le {{ post.getDateCreation|date('d/m/Y') }}</small></p>
                    
                    <!-- Contenu du post -->
                    <p class="card-text">{{ post.contenu }}</p>

                    <!-- Likes et Commentaires -->
                    <div class="d-flex justify-content-end align-items-center mt-3">
                        <span id="like-count-{{ post.id }}">{{ post.nbLike is not null ? post.nbLike : 0 }}</span>
                        
                        <!-- Ic√¥ne üëç cliquable -->
                        <span class="like-btn mx-2" data-post-id="{{ post.id }}" style="font-size: 24px; cursor: pointer;">üëç</span>
                        
                        <span id="comment-count-{{ post.id }}">
                            {{ post.nbComment is not null ? post.nbComment : 0 }} üí¨
                            <a href="{{ path('app_showcomments', {'id': post.id}) }}" class="text-decoration-none ms-1">Voir les commentaires</a>
                        </span>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun post disponible pour ce forum.</p>
        {% endfor %}
    </div>

    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_showforum') }}" class="btn btn-primary">Retour au forum</a>
        <a href="{{ path('app_addpost', {'forumId': forum.id}) }}" class="btn btn-success">Ajouter un Post</a>
    </div>
</div>

<!-- Script AJAX pour les Likes et la Suppression -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Gestion des likes
        document.querySelectorAll(".like-btn").forEach(button => {
            button.addEventListener("click", function () {
                let postId = this.dataset.postId;
                let likeCountSpan = document.getElementById("like-count-" + postId);

                fetch("/post/" + postId + "/like", {
                    method: "POST",
                    headers: {
                        "X-Requested-With": "XMLHttpRequest"
                    }
                })
                .then(response => response.json())
                .then(data => {
                    likeCountSpan.textContent = data.nbLike;
                })
                .catch(error => console.error("Erreur :", error));
            });
        });
    });
</script>

{% endblock %}
