{% extends "base.html.twig" %}


{% block body %}


	<!-- Hero Section -->
	<section id="hero" class="hero section dark-background">

		<img src="{{ asset('img/hero-bg.jpg') }}" alt="" data-aos="fade-in">

		<div class="container">
			<h2 data-aos="fade-up" data-aos-delay="100">Welcome !</h2>

			<div class="signup-form mt-4" data-aos="fade-up" data-aos-delay="400">
				<form action="register.php" method="post">
					<div class="form-group">
						<input type="text" id="signup-id" name="signup-id" class="form-control" required placeholder="ID here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ID here'">
					</div>
					<div class="form-group mt-2">
						<input type="password" id="signup-password" name="signup-password" class="form-control" required placeholder="Password here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password here'">
					</div>
				</form>
			</div>

			<div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
				<a href="{{path('courses')}}" class="btn-get-started">
					Login
				</a>
			</div>

		</div>

	</section>
	<!-- /Hero Section -->

{% endblock %}
