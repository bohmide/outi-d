{% extends 'base.html.twig' %}

{% block title %}Ajouter une réponse{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">Ajouter une réponse</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="card p-4">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.reponse, 'Texte de la réponse') }}
                {{ form_widget(form.reponse, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.isCorrect, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.isCorrect, 'Réponse correcte', {'attr': {'class': 'form-check-label'}}) }}
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
