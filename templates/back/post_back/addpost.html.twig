{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter un Post{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">Ajouter un Post au Forum: {{ forum.nom }}</h1>

    {{ form_start(form, { enctype: 'multipart/form-data', attr: { class: 'needs-validation', novalidate: 'novalidate' } }) }}

    <div class="form-group mb-3">
        {{ form_label(form.nom, 'Titre du Post', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder':'Entrez le nom du post'}}) }}
        {{ form_errors(form.nom) }}
    </div>
    <div class="form-group mb-3">
        {{ form_label(form.contenu, 'contenu du Post', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control','placeholder':'Entrez le contenu du post'}}) }}
        {{ form_errors(form.contenu) }}
    </div>

    <input type="hidden" name="forum_id" value="{{ forum.id }}">

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Publier</button>
    </div>

    {{ form_end(form) }}

    <a href="{{ path('app_showbackposts', {'id': forum.id}) }}" class="btn btn-secondary mt-3">Retour</a>
</div>
{% endblock %}
