{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau quiz - {{ chapitre.getNomChapitre() }}{% endblock %}

{% block body %}
<div class="container my-5">

    <h2 class="mb-4">Créer un nouveau quiz pour "{{ chapitre.getNomChapitre() }}"</h2>

    {# Affichage des erreurs globales du formulaire #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in form.vars.errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group mb-3">
        {{ form_label(form.titre, 'Titre du quiz', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.titre, {
            'attr': {
                'class': 'form-control' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : '')
            }
        }) }}
        {# Affichage des erreurs spécifiques au champ titre #}
        <div class="invalid-feedback">
            {{ form_errors(form.titre) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
