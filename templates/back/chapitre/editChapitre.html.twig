{% extends "base.html.twig" %}

{% block title %} Modifier un chapitre {% endblock %}

{% block body %}
<div class="container my-5">
    <div class="bg-light p-5 rounded shadow">
        <div class="bg-white p-4 rounded shadow">
            <h1 class="text-primary text-center">Modifier un Chapitre</h1>
            <p class="text-muted text-center">Cours: <strong>{{ chapitre.getCours().getNom() }}</strong></p>

            <hr>

            {# Afficher les messages de succès ou d'erreur #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            {{ form_start(form , {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

                <div class="mb-3">
                    {{ form_label(form.nom_chapitre, 'Titre du Chapitre') }}
                    {{ form_widget(form.nom_chapitre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom_chapitre) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.contenuText, 'Contenu Text du Chapitre') }}
                    {{ form_widget(form.contenuText, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.contenuText) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.file, 'Fichier du Chapitre') }}
                    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.file) }}

                    {# Affichage du fichier existant #}
                    {% if chapitre.contenu %}
                        <p class="mt-2">Fichier actuel: <a href="{{ asset('uploads/chapitres/' ~ chapitre.contenu) }}" target="_blank">{{ chapitre.contenu }}</a></p>
                    {% endif %}
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    <a href="{{ path('admin_cours_chapitres', {'id': chapitre.getCours().getId()}) }}" class="btn btn-secondary">Annuler</a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
