{% extends 'base.html.twig' %}

{% block title %}Détails du Cours - {% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4 text-primary">📘 {{ cours.nom }}</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">✅ {{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">❌ {{ message }}</div>
    {% endfor %}
    
    <div class="card shadow-sm border-0 p-3">
        <div class="card-body text-center">
            <p class="card-text"><strong>📌 État :</strong> <span class="badge bg-info text-dark">{{ cours.etat }}</span></p>
            <p class="card-text"><strong>📅 Date de création :</strong> {{ cours.dateCreation|date('d/m/Y') }}</p>
            <p class="card-text"><strong>🏅 Certifié :</strong> {{ cours.isCertifie() ? '✅ Oui' : '❌ Non' }}</p>
            
            <a href="{{ path('front_cours_inscrire', {'id': cours.id}) }}" class="btn btn-success me-2">🎓 S'inscrire</a>
            <a href="{{ path('app_showcours') }}" class="btn btn-secondary">⬅️ Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}